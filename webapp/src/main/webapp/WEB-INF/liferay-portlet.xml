<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 5.2.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_5_2_0.dtd">

<liferay-portlet-app>
    <portlet>
		<portlet-name>purePhone</portlet-name>
        <icon>/images/puresrc_icon.png</icon>
        <control-panel-entry-category>portal</control-panel-entry-category>
        <control-panel-entry-weight>360</control-panel-entry-weight>
        <instanceable>false</instanceable>
        <header-portlet-css>/css/pure-phone.css</header-portlet-css>
        <header-portlet-javascript>http://static.twilio.com/libs/twiliojs/1.0/twilio.min.js</header-portlet-javascript>
        <header-portlet-javascript>https://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js</header-portlet-javascript>
	</portlet>

	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
</liferay-portlet-app>